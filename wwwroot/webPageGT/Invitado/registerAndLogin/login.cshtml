@model ProyectoGuitarra.Models.LoginForm
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <link rel="icon" href="toolsAndOthers/titleBarLogo.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicio de sesión</title>
    <link rel="stylesheet" href="~/webPageGT/Invitado/registerAndLogin/login.css">
</head>

<body>
    <h1>@ViewBag.error</h1>
    <div class="myForm">
        <h1> Inicio de Sesión </h1>
        <form method="post">


            @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { autocomplete="off"}))
            {
                <div class="username">
                    @Html.TextBoxFor(m=> m.MailInput, new { placeholder= "Correo Electronico", id = "mailInput", required = "required",  autocomplete="off"})
                </div>

                <div class="pass">
                    @Html.TextBoxFor(m=>m.PasswordInput, new {placeholder= "Contraseña", id = "passwordInput", type="password", required = "required"})
                </div>

                <div class="forgotPass">
                    <a href="/changepassword"> ¿Olvido su contraseña? </a>
                </div>

                <input type="submit" value="Iniciar">
            }




            <div class="registrarse">
                ¿No tienes cuenta? <a href="/registro"> Registrate </a>
            </div>
        </form>
    </div>

</body>

</html>