@model ProyectoGuitarra.Models.TokenModel

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="icon" href="toolsAndOthers/titleBarLogo.png">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recuperacion de Contraseña</title>
    <link rel="stylesheet" href="~/webPageGt/Invitado/registerAndLogin/forgotPass.css">
</head>
<body>

    <div class="recoverPass">
        <header>
        <h1> Recuperar contraseña </h1>
    </header>

        <form method="post">
            @using (Html.BeginForm("Index", "ChangePassword", FormMethod.Post))
            {

            <div class="msj">
                <label> Ingrese su correo de registro </label>
            </div>
            <div class="username">
                @Html.TextBoxFor(m=>m.correo, new {placeholder= "Escribe tu email", required = "required",
                autocomplete="off", type="email"} )
            </div>
        <div class="btn1">
            <a href="changePass.html"> <input type="submit" value="Enviar"> </a>
        </div>
            }
        </form>
        <div class="btn2">
            <a href="/login"> <input type="submit" value="Regresar"> </a>
        </div>
    </div>

</body>
</html>